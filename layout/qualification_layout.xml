<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:fitsSystemWindows="true"
        android:background="#efefef"
        android:theme="@style/AppTheme.PopupOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/qualification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    android:tint="#11000000"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="University Garage"
                    android:src="@drawable/qualify" />



            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>



    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:behavior_overlapTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Required Qualifications for Applying Universities"
                android:paddingLeft="16dp"
                android:textColor="#3b5998"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1c1c1c"
                android:textSize="18dp"
                android:paddingLeft="18dp"
                android:layout_marginBottom="10dp"
                android:text="You must have:"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="1. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="You must be the candidate who passed the matriculation examination in the  previous time."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="2. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="You must have good morality."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="3. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="You must be healthy as a normal person."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="4. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="Even though you can’t attend the university because of some reasons, you must apply for the university you want to attend. If you don’t, you can’t attend the university forever."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="5. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="If you have had the permission to attend the university, but you don’t attend the present academic year for some reasons, you can attend the university by applying again in the next year."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="6. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="Your passport photos"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>