<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:fitsSystemWindows="true"
        android:background="#efefef"
        android:theme="@style/AppTheme.PopupOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/pp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    android:tint="#11000000"

                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="University Garage"
                    android:src="@drawable/register_rule" />



            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>



    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:behavior_overlapTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Registration Rules"
                android:paddingLeft="16dp"
                android:textColor="#3b5998"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1c1c1c"
                android:textSize="18dp"
                android:paddingLeft="18dp"
                android:layout_marginBottom="10dp"
                android:text="You must obey:"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="1. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="If your roll call percentage is under 75%, you can’t sit the exam."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="2. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="If you can’t sit the exam because of your roll call, you are regarded as a failure of exam."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="3. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="If you are using any illegal ways in exam, you must be severely taken actions."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="4. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="Either inside  or outside campus, you can’t do any illegal things and you must avoid frustrating the girls."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="5. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="You must avoid smoking, using drugs and alcoholic liquids."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="6. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="You can’t stick on any paper on the walls of university and whiteboards."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="7. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="You can’t make any noise that can disturb the other students’ learning."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="8. "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1c1c1c"
                    android:textSize="18dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="If you don’t follow the rules that is regarded by University Council, you must be severely taken actions."/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>